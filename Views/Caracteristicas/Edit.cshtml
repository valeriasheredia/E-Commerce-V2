@model Caracteristica

@{
    ViewData["Title"] = "Editar Característica";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Editar Característica</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="form-group text-center">
                    <img id="ImagenPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagen" class="control-label"></label>
                        <input asp-for="Imagen" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                  

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Ver Todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagenPreview');
            output.src = $("#Imagen").val();
        })
        $("#Imagen").on("change", function () {
            var output = document.getElementById('ImagenPreview');
            output.src = $(this).val();
        })
    </script>
}