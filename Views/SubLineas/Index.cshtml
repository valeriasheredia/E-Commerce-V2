@model IEnumerable<SubLinea>

@{
    ViewData["Title"] = "Lista de Sub Líneas";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Imagen)</th>
                    <th>@Html.DisplayNameFor(model => model.Linea.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Descripcion)</th>            
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
               {
                   <tr>
                       <td class="align-middle">
                           <img class="rounded-circle" src="@item.Imagen" alt="@item.Nombre" style="max-width:150px"/>
                       </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Linea.Nombre)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Editar</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Detalles</a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Eliminar</a> 
                        </td>
                   </tr>
               }
            </tbody>
        </table>
    </div>
</div>