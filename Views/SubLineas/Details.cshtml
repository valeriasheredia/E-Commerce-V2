@model SubLinea

@{
    ViewData["Title"] = "Detalle de la Sub-Línea";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detalle de @Model.Nombre</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                   
                    <div class="form-group text-center">
                        <img id="ImagenPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagen" class="control-label"></label>
                        <input asp-for="Imagen" autocomplete="off"class="form-control" readonly/>
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" autocomplete="off" class="form-control" readonly />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" autocomplete="off" class="form-control" readonly />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                <div class="form-group">
                    <label asp-for="Linea.Nombre" class="control-label"></label>
                    <input asp-for="Linea.Nombre" autocomplete="off" class="form-control" readonly />
                    <span asp-validation-for="Linea.Nombre" class="text-danger"></span>
                </div>

                    <div class="form-group">
                          @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                      {
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                      }
                        <a class="btn btn-outline-secondary" asp-action="Index">Ver Todos</a>
                    </div>               
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagenPreview');
            output.src = $("#Imagen").val();
        })
       
    </script>
}