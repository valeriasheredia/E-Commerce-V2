@model SubCaracteristica

@{
    ViewData["Title"] = "Eliminar Sub-Característica";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Confirma Eliminar @Model.Nombre</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                   
                    <div class="form-group text-center">
                        <img id="ImagenPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagen" class="control-label"></label>
                    <input asp-for="Imagen" autocomplete="off" class="form-control" readonly />
                        <span asp-validation-for="Imagen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" autocomplete="off" class="form-control" readonly />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" autocomplete="off" class="form-control" readonly />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                <div class="form-group">
                    <label asp-for="Caracteristica.Nombre" class="control-label"></label>
                    <input asp-for="Caracteristica.Nombre" autocomplete="off" class="form-control" />
                    <span asp-validation-for="Caracteristica.Nombre" class="text-danger"></span>
                </div>

                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Ver Todos</a>
                    </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagenPreview');
            output.src = $("#Imagen").val();
        })
       
    </script>
}